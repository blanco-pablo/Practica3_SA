html(lang="en")
	head
		title Tarea 3 - 201504242
		meta(charset="UTF-8")
		link(rel="stylesheet" type="text/css" href="public/css/style.css")
		meta(name="viewport" content="width=device-width, initial-scale=1")
	body
		h1 Combos Para Comprar
		table(border="3px")
			tr
				th ID
				th Restaurante
				th No Combo
				th Descripcion
				th Precio
			each user, i in userlist    
				tr
					td #{user.ID}
					td #{user.restaurante}
					td #{user.Combo}
					td #{user.Descripcion}
					td #{user.precio}
		h1 Pedir Combo por ID
			form(action="/pedir", method="post")
				input(type="text" name="id" id="id" placeholder="ID (Numero)")
				input(type="submit" class="btn" value="Pedir")